{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": ".",
        "declaration": false,
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.ts"
    ]
}
